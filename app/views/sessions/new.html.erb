<h1 class="text-center my-4">Log in</h1>
<div class="container">
  <div class="row d-flex justify-content-center">
    <div class="col-10">
      <%= form_with scope: :session, url: login_path, class: "shadow p-3 mb-4 bg-secondary bg-gradient rounded" do |f| %>
        <div class="mb-3 row">
          <%= f.label :Email, class: "col-sm-2 col-form-label text-white" %>
          <div class="col-sm-10">
            <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Enter the email address" %>
          </div>
        </div>
        <div class="mb-3 row">
          <%= f.label :Password, class: "col-sm-2 col-form-label text-white" %>
          <div class="col-sm-10">
            <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Enter your password" %>
          </div>
        </div>
        <div class="d-flex justify-content-center mb-3">
          <%= f.submit "Log in", class: "btn btn-outline-light btn-lg" %> 
        </div>
      <% end %>
    </div>

    <%= link_to '[ Cancel and Return to users listing ]', users_path, class:"text-center" %>
  </div>
</div>