<div class="row d-flex justify-content-center">
  <div class="col-10">
    <%= render "shared/errors", obj: @playlist %>
    <%= form_with model: @playlist, class: "shadow p-3 mb-4 bg-secondary bg-gradient rounded" do |f| %>
      <div class="mb-3 row">
        <%= f.label :Title, class: "col-sm-2 col-form-label text-white" %>
        <div class="col-sm-10">
          <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of playlist" %>
        </div>
      </div>
      <div class="mb-3 row">
        <%= f.label :Description, class: "col-sm-2 col-form-label text-white" %>
        <div class="col-sm-10">
          <%= f.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Description of media" %>
        </div>
      </div>
      <div class="mb-3 row">
        <%= f.label :File, class: "col-sm-2 col-form-label text-white" %>
        <div class="col-sm-10">
          <%= f.file_field :media_file, class: "fbtn btn-outline-success" %>
        </div>
      </div>
      <div class="d-flex justify-content-center mb-3">
        <%= f.submit class: "btn btn-outline-light btn-lg" %>
      </div>

    <% end %>
  </div>
  <%= link_to '[ Cancel and Return to playlist listing ]', playlists_path, class:"text-center" %>
</div>