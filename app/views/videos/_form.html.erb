<div class="row d-flex justify-content-center">
  <div class="col-10">
    <%= render 'shared/errors', obj: @video %>
    <%= form_with model: @video, class: "shadow p-3 mb-4 bg-secondary bg-gradient rounded" do |f| %>
      <div class="mb-3 row">
        <%= f.label :Title, class: "col-sm-2 col-form-label text-white" %>
        <div class="col-sm-10">
          <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of media" %>
        </div>
      </div>
      <div class="mb-3 row">
        <%= f.label :Description, class: "col-sm-2 col-form-label text-white" %>
        <div class="col-sm-10">
          <%= f.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Description of media" %>
        </div>
      </div>
      <div class="mb-3 row">
        <%= f.label :Link, class: "col-sm-2 col-form-label text-white" %>
        <div class="col-sm-10">
          <%= f.text_field :link, class: "form-control shadow rounded", placeholder: "Link of media" %>
        </div>
      </div>

      <div class="mb-3 row">
        <%= f.label :Playlist, class: "col-sm-2 col-form-label text-white" %>
        <div class="col-sm-10">
          <%= f.select :playlist_id, Playlist.where(user: current_user).map { |playlist| [playlist.title, playlist.id] }, {}, {class: "form-select shadow rounded"} %>
        </div>
      </div>

      <div class="d-flex justify-content-center mb-3">

        <% if current_page?(new_video_path) %>
          <%= f.submit "Create media", class: "btn btn-outline-light btn-lg" %>
          <% else %>
          <%= f.submit "Update media", class: "btn btn-outline-light btn-lg" %>
        <% end %>
      </div>

    <% end %>
  </div>

  <%= link_to '[ Cancel and Return to media listing ]', videos_path, class:"text-center" %>
</div>