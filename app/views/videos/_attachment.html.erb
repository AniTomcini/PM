<% if @video.media_file.attached? %>
  <div class="row">
    <% if @video.media_file.video? %>
      <div class="text-center">
        <%= video_tag(url_for(@video.media_file), class: "object-fit-fill border rounded", controls: "") %>
      <div>
    <% elsif @video.media_file.audio? %>
      <div class="text-center">
        <%= audio_tag(url_for(@video.media_file), class: "object-fit-fill border rounded", controls: "") %>
      <div>
    <% else %>
      <div class="text-center">
        <div class="alert alert-danger" role="alert">
          The media file is not the right format!
        </div>
      <div>
    <% end %>
  </div>
<% end %>
