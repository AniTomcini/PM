<h1 class="text-center my-5">Showing Devices</h1>

<div class="container" style="width: 60rem;">
  <div class="card text-center mx-lg-4">
    <div class="card-header">
      Created by <%= @device.user.username %>
    </div>
    <div class="card-body">
      <h5 class="card-title"><%= @device.name %></h5>
      <% if logged_in? && (@device.user == current_user || current_user.admin?) %>
        <%= link_to 'Edit', edit_device_path(@device), class: "btn btn-outline-info me-md-2" %>
        <%= link_to 'Delete', device_path(@device), data: { "turbo_method": :delete, "turbo_confirm": "Are you sure?" }, class: "btn btn-outline-danger" %>
      <% end %>
    </div>
    <p>
        <small>Created <%= time_ago_in_words(@device.created_at) %> ago,
        edited <%= time_ago_in_words(@device.updated_at) %> ago
        </small>
      </p>
    <div class="card-footer text-body-secondary">
      <h5 class="mt-3">Belongs to <%= @device.playlist.title %></h5>
    </div>
  </div>
</div>
<p class="text-center mt-4">
  <%= link_to 'Return to device listing', devices_path %>
</p>