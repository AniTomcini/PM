<div class="row d-flex justify-content-center">
  <div class="col-10">
    <%= render "shared/errors", obj: @device %>
    <%= form_with model: @device, class: "shadow p-3 mb-4 bg-secondary bg-gradient rounded" do |f| %>
      <div class="mb-3 row">
        <%= f.label :Name, class: "col-sm-2 col-form-label text-white" %>
        <div class="col-sm-10">
          <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Name of Device" %>
        </div>
      </div>
      <div class="mb-3 row">
        <%= f.label :Playlist, class: "col-sm-2 col-form-label text-white" %>
        <div class="col-sm-10">
          <!--<%= f.select :playlist_id, options_for_select(Playlist.all.collect { |playlist| [playlist.title, playlist.id] }), {}, {class: "form-select shadow rounded"} %>-->
          <%= f.select :playlist_id, Playlist.where(user: current_user).map { |playlist| [playlist.title, playlist.id] }, {}, {class: "form-select shadow rounded"} %>
        </div>
      </div>
      <div class="d-flex justify-content-center mb-3">
        <%= f.submit class: "btn btn-outline-light btn-lg" %>
      </div>
    <% end %>
  </div>
  <%= link_to '[ Cancel and Return to playlist listing ]', playlists_path, class:"text-center" %>
</div>